<!DOCTYPE HTML PUBLIC "-//IETF//DTD HTML 2.0//EN">
<html>
<head>
    <title>@ViewBag.Title</title>

    @if (@ViewBag.Refresh as bool? == true)
    {
        <meta http-equiv="refresh" content="1">
    }
    <basefont face="helvetica, arial">
</head>
@{ string search = Context.Request.Query["q"].FirstOrDefault() ?? "Search YouTube"; }
<body bgcolor="#ffffff" align="center">
    <!-- Header -->
    <center>
        <!-- Search Form -->
        <table border="0" width="600">
            <tr>
                <td>
                    <table>
                        <tr>
                            <td align="left" width="25%">
                                <h1><a href="/"><img src="/images/68tube.gif" alt="68kTube Icon" valign="middle" align="left" border="0" />68kTube</a></h1>
                            </td>
                            <td align="center" width="50%">
                                <form action="/search" method="get">
                                    <input name="q" value="@search" width="300" />
                                    <input type="submit" value="Search" />
                                </form>
                            </td>
                            <td align="right" width="25%">
                                Sign In (TODO)
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td width="100%" align="left">
                    <hr />
                    @RenderBody()
                </td>
            </tr>
            <tr>
                <td>
                    <hr />
                    <footer>
                        <menu>
                            <li><a href="/">Home</a></li>
                            <li><a href="/settings/?returnUrl=@Context.Request.GetEncodedUrl()">Settings</a></li>
                            <li><a href="https://github.com/pgodwin/68kTube">Github</a></li>
                        </menu>
                    </footer>
                </td>
            </tr>
        </table>

    </center>

</body>
</html>